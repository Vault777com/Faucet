# Docker Environment Configuration for Collify Deployment
# Copy this file to .env and fill in your actual values

# Arbitrum Sepolia RPC URL (from Infura, Alchemy, etc.)
SEPOLIA_URL=https://sepolia-rollup.arbitrum.io/rpc

# Arbitrum Mainnet RPC URL for balance validation
ARBITRUM_MAINNET_RPC=https://arb1.arbitrum.io/rpc

# Private key of the account used for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Arbiscan API Key for Arbitrum contract verification (same as Etherscan key)
ARBISCAN_API_KEY=your_etherscan_api_key_here

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database connection URL for PostgreSQL (your external database)
DATABASE_URL=postgres://username:password@your-host:5432/database_name?sslmode=disable

# ERC20 token address to use for the faucet (if applicable)
TOKEN_ADDRESS=your_erc20_token_address_here

# Note: Keep this file private and never commit it to version control
